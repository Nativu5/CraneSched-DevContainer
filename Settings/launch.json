        {
            "name": "C++: Target",
            "request": "launch",
            "type": "lldb",
            "program": "${command:cmake.launchTargetPath}",
            "args": []
        },
        {
            "name": "CMake: Configure",
            "type": "cmake",
            "request": "launch",
            "cmakeDebugType": "configure",
            "clean": true,
            "configureAll": false
        },
        {
            "name": "Go: Package",
            "type": "go",
