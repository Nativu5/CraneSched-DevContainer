// For format details, see https://aka.ms/devcontainer.json.
{
	"name": "CraneSched Dev Container",
	"image": "registry.cn-shanghai.aliyuncs.com/nativus/cranedev:latest",
	"privileged": true,
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"workspaceFolder": "/Workspace/Project",
	"workspaceMount": "source=${localWorkspaceFolder},target=/Workspace/Project,type=bind,consistency=cached",
	"postStartCommand": "bash /Workspace/Scripts/Launch-SSH.sh",
	"containerEnv": {
		"TZ": "Asia/Shanghai"
	}
}